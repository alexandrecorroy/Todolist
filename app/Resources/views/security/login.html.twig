{% extends 'base.html.twig' %}

{% block body %}
    {% if error %}
        <div class="alert alert-danger" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

        <form action="{{ path('login_check') }}" method="post" class="text-center form-inline">
            <div class="form-group">
                <label for="username">Nom d'utilisateur :</label>
                <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" />
            </div>
            <div class="form-group">
                <label for="password">Mot de passe :</label>
                <input type="password" class="form-control" id="password" name="_password" />
            </div>
            <button class="btn btn-success" type="submit">Se connecter</button>
        </form>

    <a href="{{ path('forgot_password') }}" class="pull-right">Mot de passe perdu ?</a>
{% endblock %}
